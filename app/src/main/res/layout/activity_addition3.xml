<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_addition3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:orientation="vertical"
    tools:context="com.example.sagar.ahs.Addition3">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffff"
            android:id="@+id/textView50"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:textColor="#ffff"
            android:id="@+id/textView51"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView55"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#ffff"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            />
        <TextView
            android:text="@string/cropgrown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:textColor="#ffff"
            android:id="@+id/textView52"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffff"
            android:id="@+id/textView53"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:textColor="#ffff"
            android:text="@string/DTH"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1" />

    </LinearLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffff"
            android:id="@+id/tv122"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1" />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3"
        >

        <ImageButton
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hay"
            android:id="@+id/imageButton54"
            android:background="@color/colorPrimary"
            android:onClick="movetofirst"
            android:layout_weight="1"
            android:tint="#ffff"/>

        <ImageButton
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/field"
            android:id="@+id/imageButton55"
            android:background="@color/colorPrimary"
            android:onClick="movetosecond"
            android:layout_weight="1"
            android:tint="#ffff"/>

        <ImageButton
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/videoediting"
            android:id="@+id/imageButton56"
            android:background="@color/colorAccent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:text="@string/best_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:layout_weight="1.85"
            android:background="@color/colorPrimary"

            android:gravity="center"
            android:textColor="#ffff"/>

        <TextView
            android:text="@string/currentsituaation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:gravity="center"
            android:textColor="#ffff"
            android:background="@color/colorPrimary"

            android:layout_weight="0.78" />

        <TextView
            android:text="@string/procedure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            />
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:text="@string/planting"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:id="@+id/button8"
            android:layout_below="@+id/button7"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/food"
            android:onClick="plantMain" />

        <Button
            android:text="@string/Storage"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button8"
            android:layout_alignEnd="@+id/button8"
            android:id="@+id/button9"
            android:drawableLeft="@drawable/asd"
            android:onClick="storageMain" />

        <Button
            android:text="@string/planting"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button12"
            android:layout_alignEnd="@+id/button12"
            android:id="@+id/button13"
            android:drawableLeft="@drawable/food"
            android:onClick="plantSide" />

        <Button
            android:text="@string/Storage"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button13"
            android:layout_alignStart="@+id/button13"
            android:id="@+id/button14"
            android:drawableLeft="@drawable/asd"
            android:onClick="storageSide" />

        <TextView
            android:text="@string/maincrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView46"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#ffff"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />

        <Button
            android:text="@string/fertilizer"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="11dp"
            android:id="@+id/button7"
            android:drawableLeft="@drawable/fertilizer"
            android:layout_below="@+id/textView46"
            android:layout_alignStart="@+id/button8"
            android:onClick="fertilizerMain" />

        <TextView
            android:text="@string/sidecrop1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/textView47"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#ffff"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/button9"
            android:layout_alignParentStart="true" />

        <Button
            android:text="@string/fertilizer"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="11dp"
            android:id="@+id/button12"
            android:drawableLeft="@drawable/fertilizer"
            android:layout_below="@+id/textView47"
            android:layout_alignStart="@+id/button9"
            android:onClick="fertilizerSide" />
    </RelativeLayout>

</ScrollView>
</LinearLayout>
