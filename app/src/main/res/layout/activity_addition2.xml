<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_addition2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:orientation="vertical"
    tools:context="com.example.sagar.ahs.Addition2"
    android:weightSum="1">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffff"
            android:id="@+id/textView88"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:textColor="#ffff"
            android:id="@+id/textView89"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView99"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#ffff"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            />

        <TextView
            android:text="@string/cropgrown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:id="@+id/textView90"
            android:textColor="#ffff"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView19"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:layout_weight="1" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:text="@string/DTH"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:layout_weight="1" />

    </LinearLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffff"
            android:id="@+id/tv122"
            android:background="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_weight="1" />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:weightSum="3">

        <ImageButton
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hay"
            android:id="@+id/imageButton54"
            android:background="@color/colorPrimary"
            android:onClick="movetofirst"
            android:layout_weight="1"
            android:tint="#ffff"/>

        <ImageButton
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/field"
            android:id="@+id/imageButton55"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            />

        <ImageButton
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/videoediting"
            android:id="@+id/imageButton56"
            android:background="@color/colorPrimary"
            android:onClick="movetothird"
            android:layout_weight="1"
            android:tint="#ffff"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:text="@string/best_crop"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:background="@color/colorPrimary"

            android:gravity="center"
            android:textColor="#ffff"/>

        <TextView
            android:text="@string/currentsituaation"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:gravity="center"
            android:background="@color/colorAccent"

            />

        <TextView
            android:text="@string/procedure"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:gravity="center"
            android:textColor="#ffff"
            android:background="@color/colorPrimary"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp">


        <TextView
            android:text="@string/Current_Crop"
            android:background="@color/colorPrimary"
            android:id="@+id/textView40"
            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="50dp"

            android:textSize="16sp"
            android:textColor="#ffff"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"/>

        <TextView

            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="16sp"
            android:id="@+id/textView42"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView40" />

        <TextView

            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_alignTop="@+id/textView38"
            android:layout_toEndOf="@+id/textView38"
            android:id="@+id/textView43" />

        <TextView

            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="16sp"
            android:id="@+id/textView44"
            android:layout_alignTop="@+id/textView39"
            android:layout_toEndOf="@+id/textView39" />

        <TextView

            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_alignTop="@+id/textView41"
            android:layout_toEndOf="@+id/textView41"
            android:id="@+id/textView45" />

        <TextView
            android:text="@string/SideCrop"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/textView38"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:textSize="16sp"
            android:textColor="#ffff"
            android:gravity="center"
            android:layout_below="@+id/textView40"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp" />

        <TextView
            android:text="@string/PlantedDate"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/textView39"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:textSize="16sp"
            android:textColor="#ffff"
            android:gravity="center"
            android:layout_below="@+id/textView43"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp" />

        <TextView
            android:text="@string/Expected_Harvest_Date"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/textView41"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:textSize="16sp"
            android:textColor="#ffff"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:layout_below="@+id/textView44"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/Error_Message"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/textView37"
            android:layout_below="@+id/textView43"
            android:layout_alignParentStart="true"
            android:textStyle="italic"
            android:background="@color/colorPrimary"
            android:textSize="15sp"
            android:textColor="#ffff"/>
    </RelativeLayout>


</LinearLayout>
